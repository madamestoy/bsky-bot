{
  "name": "bsky-bot",
  "version": "0.0.0",
  "description": "Bot for bsky.social",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run clean && npm run compile && npm run copy",
    "clean": "node ./tools/clean.mjs",
    "compile": "tsc",
    "copy": "node ./tools/copy-files.mjs",
    "dev": "nodemon",
    "start": "pm2 start dist/main.js"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "exec": "npm run compile && node ./dist/main.js",
    "ext": "ts,js,json"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@atproto/api": "^0.13.7",
    "@types/fs-extra": "^11.0.4",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-rate-limit": "^7.4.0",
    "fs-extra": "^11.2.0",
    "helmet": "^7.1.0",
    "pm2": "^5.4.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.5",
    "nodemon": "^3.1.4",
    "typescript": "^5.6.2"
  },
  "volta": {
    "node": "20.17.0"
  }
}
